<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_app">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tbTicketView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#2180F3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_editor_absoluteX="0dp">

        <ImageButton
            android:id="@+id/imageBackArrow"
            android:layout_width="65dp"
            android:layout_height="50dp"
            android:contentDescription="@string/imagen_de_la_flecha_hacia_atras"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/abc_vector_test"
            tools:layout_editor_absoluteX="33dp" />

        <TextView
            android:id="@+id/textTituloAplicacion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginLeft="40dp"
            android:text="@string/app_name"
            android:textColor="@color/white"
            android:textSize="26sp" />

    </androidx.appcompat.widget.Toolbar>

    <View
        android:id="@+id/backgroundTextTicket"
        android:layout_width="390dp"
        android:layout_height="250dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/border_radius_background_ticket"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.476"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tbTicketView" />

    <TextView
        android:id="@+id/textTituloTicket"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="16dp"
        android:text="@string/titulo_ticket"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/backgroundTextTicket"
        app:layout_constraintTop_toTopOf="@+id/backgroundTextTicket" />


    <TextView
        android:id="@+id/textDescripcionTicket"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="16dp"
        android:text="@string/descripcion_del_ticket"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/backgroundTextTicket"
        app:layout_constraintTop_toBottomOf="@+id/textTituloTicket" />

    <TextView
        android:id="@+id/textNombreAutor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginBottom="8dp"
        android:text="@string/autor"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/backgroundTextTicket"
        app:layout_constraintStart_toStartOf="@+id/backgroundTextTicket" />

    <TextView
        android:id="@+id/textDateTicket"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="230dp"
        android:layout_marginLeft="230dp"
        android:layout_marginBottom="8dp"
        android:text="23/05/2021"
        app:layout_constraintBottom_toBottomOf="@+id/backgroundTextTicket"
        app:layout_constraintStart_toEndOf="@+id/textNombreAutor" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomTicketOption"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background_navigation"
        app:labelVisibilityMode="labeled"
        app:layout_constraintBottom_toBottomOf="parent"
        app:menu="@menu/bottom_ticket_option"
        tools:layout_editor_absoluteX="0dp" />

</androidx.constraintlayout.widget.ConstraintLayout>