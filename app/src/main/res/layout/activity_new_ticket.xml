<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NewTicketActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tb_ticket"
        android:background="#2180F3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_editor_absoluteX="-16dp"
        app:title="Tickets Nuevos"
        app:menu="@menu/appbar_top"
        app:titleTextColor="#F4F4F4"
        tools:ignore="NotSibling">

    </androidx.appcompat.widget.Toolbar>


    <TextView
        android:id="@+id/tvSumar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="104dp"
        android:text="AÃ±adir Ticket"
        android:textColor="#2180F3"
        android:textSize="32sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/etTitulo"
        android:layout_width="292dp"
        android:layout_height="43dp"
        android:layout_marginTop="184dp"
        android:background="#6500BCD4"
        android:hint="Escriba el Titulo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.487"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/etAutor"
        android:layout_width="293dp"
        android:layout_height="41dp"
        android:layout_marginTop="252dp"
        android:background="#6500BCD4"

        android:hint="Escriba el Autor"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/etDescripcion"
        android:layout_width="301dp"
        android:layout_height="240dp"
        android:layout_marginTop="316dp"
        android:background="#6500BCD4"
        android:hint="Escriba una descripcion"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnSumarAceptar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="80dp"
        android:text="Aceptar"
        app:backgroundTint="#2180F3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etDescripcion" />


</androidx.constraintlayout.widget.ConstraintLayout>